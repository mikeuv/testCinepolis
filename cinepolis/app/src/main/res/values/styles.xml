<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/color_primary</item>
        <item name="android:textColor">@color/primaryTextWhite</item>

        <!-- Support library compatibility -->
        <item name="background">@color/color_primary</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="FloatingLabelTextWhiteAppearance" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#FFF</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#FFF</item>
        <item name="colorControlNormal">#9e9e9e</item>
        <item name="colorControlActivated">#FFF</item>
    </style>

    <style name="EditTextWhiteAppearance">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#9e9e9e</item>
        <item name="colorControlActivated">#FFF</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

</resources>
